{
// Документацию по формату tasks.json см.
    // по адресу https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "C:\\MinGW\\mingw64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${fileDirname}\\*.c",
                "${fileDirname}\\..\\*.c",
                "${fileDirname}\\..\\..\\..\\*.c",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}